<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground">

	<RelativeLayout
		android:id="@+id/rl_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginBottom="@dimen/global_metric_small"
		android:layout_marginLeft="@dimen/global_metric_medium"
		android:layout_marginRight="@dimen/global_metric_small"
		android:layout_marginTop="@dimen/global_metric_small">

		<ImageView
			android:id="@+id/icon_image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"/>

	</RelativeLayout>

	<ImageView
		android:id="@+id/tick_image_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/global_metric_medium"
		android:layout_marginRight="@dimen/global_metric_medium"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/global_metric_small"
		android:layout_toLeftOf="@id/tick_image_view"
		android:layout_toRightOf="@id/rl_image"
		android:orientation="vertical"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/title_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textSize="@dimen/global_text_large"/>

		<TextView
			android:id="@+id/subtitle_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha="0.75"
			android:singleLine="true"
			android:textSize="@dimen/global_text_small_large"/>

	</LinearLayout>
</RelativeLayout>